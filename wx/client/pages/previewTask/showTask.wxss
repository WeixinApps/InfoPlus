page{
  background:#f9f9f9;
}
.taskCard{
  margin:8%;
  background:#fff;
  padding:30rpx;
  border:1px solid #ccc;
  box-shadow:1rpx 1rpx 8rpx #cfcfcf;
  margin-top:20%;
}
.titleSpan{
  font-size:24rpx;
  color:#ccc;
  margin: 5rpx 0;
}
.title{
  font-size:44rpx;
  border-left:10rpx solid rgb(232,79,135);
  margin:16rpx 0;
  padding:8rpx 16rpx;
}
.detail{
  font-size:32rpx;
  color:#888;
  margin:20rpx 0;
}
.share{
  margin:60rpx 20rpx;
  text-align:center;
  border-top:1px dotted #cfcfcf;
  padding-top:30rpx;
}
.note{
  font-size:30rpx;
  color:rgb(248,210,13);
}
button.shareTask{
  margin:20rpx;
  background:rgb(10,198,199);
  color:#fff;
}
.hide{
  display: none;
}